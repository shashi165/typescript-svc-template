{
  "name": "@mojaloop/repo-name",
  "version": "0.1.0",
  "description": "Typescript Mojaloop project template",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "pretest": "npm run build",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "lint": "eslint ./src/**/*.ts ./test/**/*.ts",
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "ts-node node_modules/.bin/tapes test/unit/**/*.test.ts",
    "test:xunit": "npm run test:unit | tap-xunit",
    "test:coverage": "nyc tape test/unit/**/*.test.{ts,js} | tap-spec; nyc report ---reporter=text",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
    "git:lintFix": "npm run lint -- --fix"
  },
  "pre-commit": [
    "build",
    "git:lintFix",
    "test:unit"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/<repo-name>.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services"
  ],
  "author": "lewisdaly",
  "contributors": [
    "Lewis Daly <lewis@vesselstech.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/<repo-name>/issues"
  },
  "homepage": "https://github.com/mojaloop/<repo-name>#readme",
  "dependencies": {},
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "0.1.3",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.0",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "source-map-support": "0.5.12",
    "tap-spec": "5.0.0",
    "tape": "4.11.0",
    "tapes": "4.1.0",
    "ts-node": "8.3.0",
    "typescript": "3.5.3"
  }
}
